<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/common_header_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/common_header_default"
        android:scaleType="center"
        />
    <TextView
        android:id="@+id/common_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/common_header_text_default"
        android:textSize="16sp"
        android:layout_alignBottom="@id/common_header_image"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:id="@+id/editor_layout"
        android:layout_below="@id/common_header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editor_title"
            android:text="@string/editor_title_str"/>
        <ImageView
            android:id="@+id/editor_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_icon_default"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</RelativeLayout>